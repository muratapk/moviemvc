
@using Microsoft.AspNetCore.Identity
@using moviemvc.Models.Domain;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if(SignInManager.IsSignedIn(User))
{
    <a href="/Account/Index" class="btn btn-success">@User.Identity.Name</a>
    <a href="/Logout/Index" class="btn btn-danger">Çıkış</a>
}
else
{
    <a href="/Login/Index" class="btn btn-primary">Login</a>
    <a href="/Register/Index" class="btn btn-warning">Register</a>
}

